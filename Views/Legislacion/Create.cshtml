@model LegislacionAPP.Models.LegislacionCreateVM
@{
    ViewData["Title"] = "Crear legislación";
}

<div class="container my-3">
    <h3 class="mb-3">Nueva legislación</h3>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="id_empresa" />

        <!-- Columna izquierda -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Empresa</label>
                        <input class="form-control" value="@Model.EmpresaNombre" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ámbito de aplicación</label>
                        <select asp-for="id_ambito_aplicacion" asp-items="Model.Ambitos" class="form-select"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="titulo" class="form-label">Titulo</label>
                        <input asp-for="titulo" class="form-control" />
                        <span asp-validation-for="titulo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="subtitulo" class="form-label">Subtitulo</label>
                        <input asp-for="subtitulo" class="form-control" />
                        <span asp-validation-for="subtitulo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="alias" class="form-label">Alias</label>
                        <input asp-for="alias" class="form-control" />
                        <span asp-validation-for="alias" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="id_pais" class="control-label">Pais</label>
                        <select asp-for="id_pais" class="form-control" asp-items="Model.Paises"></select>
                        <span asp-validation-for="id_pais" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="codigo_interno" class="form-label">Codigo Interno</label>
                        <input asp-for="codigo_interno" class="form-control" />
                        <span asp-validation-for="codigo_interno" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="fecha_vigencia" class="form-label">Fecha vigencia</label>
                        <input asp-for="fecha_vigencia" type="date" class="form-control" />
                        <span asp-validation-for="fecha_vigencia" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer bg-white d-flex justify-content-between">
                    <a asp-controller="Legislacion" asp-action="Index" asp-route-empresaId="@Model.id_empresa"
                       class="btn btn-outline-secondary">Volver</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Crear
                    </button>
                </div>
            </div>
        </div>

        <!-- Columna derecha: PDF -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white"><strong>Archivo PDF</strong></div>
                <div class="card-body">
                    <div class="mb-2 text-muted small">PDF • máx. ~10 MB</div>
                    <input asp-for="Pdf" type="file" accept="application/pdf" class="form-control" id="pdfInput" />
                    <span asp-validation-for="Pdf" class="text-danger"></span>

                    <div class="mt-3">
                        @{
                            var hasPdf = !string.IsNullOrWhiteSpace(Model.pdf_url);
                            var initialSrc = hasPdf ? $"{Model.pdf_url}#toolbar=1" : "about:blank";
                        }
                        <div class="mt-3">
                            <div class="fw-semibold mb-2">Vista previa</div>

                            <embed id="pdfPreview"
                                   src="@initialSrc"
                                   type="application/pdf"
                                   class="@(hasPdf ? "" : "d-none")"
                                   style="width:100%;height:420px;border:1px solid #e9ecef;border-radius:.375rem;" />

                            <div id="pdfEmpty" class="text-muted small mt-2 @(hasPdf ? "d-none" : "")">
                                No hay documento. Selecciona un PDF para previsualizar.
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const input   = document.getElementById('pdfInput') ?? document.querySelector('input[type="file"][id="pdfInput"], input[name="Pdf"]');
        const preview = document.getElementById('pdfPreview');
        const emptyMsg= document.getElementById('pdfEmpty');

        input?.addEventListener('change', function (e) {
            const [file] = e.target.files || [];
            if (file && file.type === 'application/pdf') {
                const url = URL.createObjectURL(file);
                preview.src = url + '#toolbar=1';
                preview.classList.remove('d-none');
                emptyMsg?.classList.add('d-none');
            } else {
                // Sin archivo o no es PDF
                preview.src = 'about:blank';
                preview.classList.add('d-none');
                emptyMsg?.classList.remove('d-none');
            }
        });
    </script>
}

