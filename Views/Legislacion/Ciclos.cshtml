@model CiclosPorLegislacionVM
@{
    ViewData["Title"] = "Ciclos";
    var sub = $"{Model.Legislacion} · {Model.Empresa}";
}

<!-- Cabecera -->
<div class="page-head rounded-3 shadow-sm p-3 mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h5 mb-1">Ciclos</h1>
            <p class="text-muted mb-0">@sub</p>
        </div>
        <a asp-controller="Legislacion" asp-action="Index" asp-route-empresaId="@Model.id_empresa"
           class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Volver a Legislaciones
        </a>
    </div>
</div>

@if (!Model.Ciclos.Any())
{
    <div class="card card-elevated">
        <div class="card-body text-center py-5">
            <div class="mb-2"><i class="bi bi-clock-history fs-1 text-primary"></i></div>
            <div class="fw-semibold">No hay ciclos para esta legislación.</div>
            <div class="text-muted small">Cuando se registren auditorías, aparecerán aquí.</div>
        </div>
    </div>
}
else
{
    <div class="card card-elevated">
        <div class="card-header bg-transparent border-0 pb-0">
            <h5 class="card-title mb-3">Historial de auditorias</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-modern align-middle mb-0">
                    <thead class="table-light sticky-th">
                        <tr>
                            <th>Inicio</th>
                            <th>Cierre</th>
                            <th>Auditor</th>
                            <th>Estado</th>
                            <th style="min-width:240px;">Avance</th>
                            <th class="text-end" style="width:180px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.Ciclos)
                        {
                            var abierta = c.Abierto;
                            var estadoBadge = abierta ? "badge-soft-warning" : "badge-soft-success";
                            var estadoText = abierta ? "Abierta" : "Cerrada";
                            var inicioText = c.fecha_inicio.ToString("dd/MM/yyyy HH:mm");
                            var cierreText = c.fecha_cierre?.ToString("dd/MM/yyyy HH:mm") ?? "—";
                            var porc = Math.Clamp(c.Porcentaje, 0, 100);

                            <tr>
                                <td>@inicioText</td>
                                <td>@cierreText</td>
                                <td>@(string.IsNullOrWhiteSpace(c.Auditor) ? "—" : c.Auditor)</td>
                                <td>
                                    <span class="badge @estadoBadge">@estadoText</span>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-between small text-muted">
                                        <span>@c.Aprobados / @c.TotalSegmentos</span>
                                        <span>@porc %</span>
                                    </div>
                                    <div class="progress progress-thin mt-1" role="progressbar"
                                         aria-valuenow="@porc" aria-valuemin="0" aria-valuemax="100">
                                        <div class="progress-bar @(abierta ? "bg-primary" : "bg-success")"
                                             style="width:@porc%"></div>
                                    </div>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-controller="Reportes" asp-action="ReporteCiclo" asp-route-cicloId="@c.id_ciclo_auditoria" class="btn btn-outline-secondary btn-sm">Ver reporte</a>
                                        <a asp-controller="Reportes" asp-action="ReporteCicloPdf" asp-route-cicloId="@c.id_ciclo_auditoria" class="btn btn-outline-secondary btn-sm">PDF</a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
