@model IEnumerable<LegislacionAPP.ViewModels.EmpresaCardVM>
@{
    ViewData["Title"] = "Mis Empresas";
    var placeholder = "https://via.placeholder.com/128x128?text=Logo";

    string EstadoClass(string? estado) => (estado ?? "").Trim().ToLower() switch
    {
        "activa" => "badge-soft-success",
        "inactiva" => "badge-soft-secondary",
        "archivada" => "badge-soft-secondary",
        _ => "badge-soft-secondary"
    };

    string EstadoLine(string? estado) => (estado ?? "").Trim().ToLower() switch
    {
        "activa" => "line-success",
        "inactiva" => "line-secondary",
        "archivada" => "line-secondary",
        _ => "line-secondary"
    };
}

<style>
    /* ---- Badges suaves ---- */
    .badge-soft-success {
        background: #e9f7ef;
        color: #198754;
        border: 1px solid #d6f0e0;
    }

    .badge-soft-secondary {
        background: #f3f4f6;
        color: #6c757d;
        border: 1px solid #e5e7eb;
    }

    /* ---- Card empresa ---- */
    .entity-card {
        border: 1px solid #eef2f6;
        border-radius: 18px;
        overflow: hidden;
        background: #fff;
        transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
        position: relative;
    }

        .entity-card:hover {
            transform: translateY(-2px);
            border-color: #e2e8f0;
            box-shadow: 0 10px 30px rgba(2,6,23,.06);
        }
        /* Línea superior de estado */
        .entity-card .topline {
            height: 4px;
            width: 100%;
        }

    .line-success {
        background: linear-gradient(90deg,#2ecc71,#27ae60);
    }

    .line-secondary {
        background: linear-gradient(90deg,#e5e7eb,#dde2ea);
    }

    .entity-card .logo {
        width: 64px;
        height: 64px;
        object-fit: cover;
        border-radius: 14px;
        border: 1px solid #eef2f6;
        box-shadow: 0 0 0 4px #f8fafc;
        background: #fff;
    }

    .entity-card .card-body {
        padding: 16px 16px 10px 16px;
    }

    .entity-card .card-footer {
        padding: 12px 16px 16px 16px;
    }

    /* ---- Action tile ---- */
    .action-tile {
        display: flex;
        align-items: center;
        gap: .75rem;
        padding: .85rem 1rem;
        border: 1px solid #eef2f6;
        border-radius: 12px;
        background: #f8fafc;
        text-decoration: none;
        color: inherit;
        transition: .15s ease;
        min-width: 0; /* para truncado */
    }

        .action-tile:hover {
            background: #f1f5f9;
            transform: translateY(-1px);
            box-shadow: 0 8px 22px rgba(15,23,42,.06)
        }

    .action-icon {
        width: 44px;
        height: 44px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        flex: 0 0 44px;
    }

    .icon-blue {
        background: #e9f2ff;
        color: #0d6efd;
    }

    .icon-violet {
        background: #f1e9ff;
        color: #6f42c1;
    }

    .icon-emerald {
        background: #e6f7f2;
        color: #0f766e;
    }

    .action-title {
        font-weight: 700;
        letter-spacing: .1px;
    }

    .action-desc {
        font-size: .875rem;
        color: #6b7280
    }

    /* ---- Encabezado y buscador ---- */
    .page-title {
        font-weight: 800;
        letter-spacing: .2px
    }

    .searchbar .input-group {
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #eef2f6
    }

    .searchbar .form-control {
        border: 0
    }

    /* ---- Responsive ---- */
    @@media (max-width: 768px) {
        .action-tile

    {
        padding: .7rem .8rem;
    }

    .action-title {
        font-weight: 600;
    }

    }
</style>

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="page-title m-0">Mis empresas</h2>

    <form method="get" class="searchbar d-none d-sm-block">
        <div class="input-group input-group-sm bg-white">
            <span class="input-group-text bg-white border-0"><i class="bi bi-search"></i></span>
            <input name="q" class="form-control" placeholder="Buscar empresa…" value="@Context.Request.Query["q"]" />
        </div>
    </form>
</div>

@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">
        Aún no tenés empresas asignadas. <span class="text-muted">Cuando tengas acceso, aparecerán aquí.</span>
    </div>
}
else
{
    <div class="row g-3 row-cols-1 row-cols-sm-2 row-cols-lg-3">
        @foreach (var e in Model!)
        {
            var logo = string.IsNullOrWhiteSpace(e.logo) ? placeholder : e.logo;
            var estadoBadge = EstadoClass(e.estado);
            var lineClass = EstadoLine(e.estado);

            <div class="col">
                <div class="card entity-card h-100">
                    <div class="topline @lineClass"></div>

                    <!-- Body -->
                    <div class="card-body d-flex">
                        <img src="@logo" alt="Logo @e.nombre" class="logo me-3" />
                        <div class="flex-grow-1 min-w-0">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="mb-1 text-truncate" title="@e.nombre">@e.nombre</h5>
                                <span class="badge @estadoBadge text-capitalize">@e.estado</span>
                            </div>
                            <div class="text-secondary small mt-1 d-flex align-items-center gap-2">
                                <span class="text-muted"><i class="bi bi-geo-alt me-1"></i>@e.pais</span>
                            </div>
                        </div>
                    </div>

                    <!-- Footer / acciones -->
                    <div class="card-footer bg-transparent border-0">
                        <div class="d-flex flex-wrap gap-2">
                            <!-- Info empresa -->
                            <a asp-controller="Empresa"
                               asp-action="Edit"
                               asp-route-empresaId="@e.id_empresa"
                               class="action-tile flex-grow-1" aria-label="Editar empresa @e.nombre">
                                <div class="action-icon icon-blue">
                                    <i class="bi bi-building-gear"></i>
                                </div>
                                <div class="overflow-hidden">
                                    <div class="action-title text-truncate">Información de la empresa</div>
                                    <div class="action-desc text-truncate">Nombre, NIT, representante, logo…</div>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </a>

                            @* Digitalizador *@
                            @if (User.IsInRole("Digitalizador") || User.IsInRole("Admin"))
                            {
                                <a asp-controller="Legislacion"
                                   asp-action="Index"
                                   asp-route-empresaId="@e.id_empresa"
                                   class="action-tile flex-grow-1" aria-label="Legislaciones de @e.nombre">
                                    <div class="action-icon icon-violet">
                                        <i class="bi bi-file-earmark-richtext"></i>
                                    </div>
                                    <div class="overflow-hidden">
                                        <div class="action-title text-truncate">Legislaciones</div>
                                        <div class="action-desc text-truncate">Crear y gestionar segmentos</div>
                                    </div>
                                    <i class="bi bi-chevron-right ms-auto text-muted"></i>
                                </a>
                            }

                            @* Gerente / Auditor *@
                            @if (User.IsInRole("Auditor") || User.IsInRole("Admin"))
                            {
                                <a asp-controller="Legislacion"
                                   asp-action="Index"
                                   asp-route-empresaId="@e.id_empresa"
                                   class="action-tile flex-grow-1" aria-label="Legislaciones de @e.nombre">
                                    <div class="action-icon icon-violet">
                                        <i class="bi bi-journal-check"></i>
                                    </div>
                                    <div class="overflow-hidden">
                                        <div class="action-title text-truncate">Auditar Legislaciones</div>
                                        <div class="action-desc text-truncate">Crear y revisar auditorias</div>
                                    </div>
                                    <i class="bi bi-chevron-right ms-auto text-muted"></i>
                                </a>

                                <a asp-controller="CMMI"
                                   asp-action="Index"
                                   asp-route-empresaId="@e.id_empresa"
                                   class="action-tile flex-grow-1" aria-label="Evaluaciones CMMI de @e.nombre">
                                    <div class="action-icon icon-emerald">
                                        <i class="bi bi-graph-up-arrow"></i>
                                    </div>
                                    <div class="overflow-hidden">
                                        <div class="action-title text-truncate">Evaluaciones CMMI</div>
                                        <div class="action-desc text-truncate">Historial, reportes y certificados</div>
                                    </div>
                                    <i class="bi bi-chevron-right ms-auto text-muted"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
